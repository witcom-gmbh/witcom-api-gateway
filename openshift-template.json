{
	"apiVersion": "v1",
	"kind": "Template",
	"metadata": {
		"name": "WITCOM-API-GATEWAY"
	},
	"parameters": [{
			"name": "APP_NAME",
			"displayName": "Application Name",
			"description": "Application name",
			"value": "witcom-api-gateway"
		},
		{
			"name": "BUILD_PROFILE",
			"displayName": "Build profile",
			"description": "Build profile - prod or dev",
			"value": "prod"
		},
		{
			"name": "SPRING_CLOUD_CONSUL_CONFIG_ACL_TOKEN",
			"displayName": "Consul ACL-Token",
			"description": "Consul ACL-Token"
		},
		{
			"name": "KEYCLOAK_SERVER_URL",
			"displayName": "Keycloak Server-URL",
			"description": "Keycloak Server-URL"
		},
		{
			"name": "KEYCLOAK_REALM_ID",
			"displayName": "Keycloak REALM",
			"description": "Keycloak REALM"
		},
		{
			"name": "SPL_BASEURL",
			"displayName": "SMDB Basis-URL",
			"description": "SMDB Basis-URL"
		},
		{
			"name": "SPL_USER",
			"displayName": "SMDB User",
			"description": "SMDB User"
		},
		{
			"name": "SPL_PASSWORD",
			"displayName": "SMDB Passwort",
			"description": "SMDB Passwort"
		},
		{
			"name": "GIT_URI",
			"displayName": "Git Repository containing application source code",
			"description": "GIT URL pointing to the repository containing application source code for Java Spring Boot Application",
			"value": "git@github.com:iceman91176/witcom-api-gateway.git"
		},
		{
			"description": "Git branch/tag reference",
			"name": "GIT_REF",
			"value": "openshift"
		}
	],
	"objects": [{
			"apiVersion": "v1",
			"kind": "ImageStream",
			"metadata": {
				"annotations": {
					"openshift.io/generated-by": "OpenShiftNewApp"
				},
				"labels": {
					"app": "${APP_NAME}"
				},
				"name": "${APP_NAME}"
			},
			"spec": {
				"tags": [{
					"annotations": null,
					"from": {
						"kind": "DockerImage",
						"name": "${APP_NAME}:latest"
					},
					"importPolicy": {},
					"name": "latest"
				}]
			},
			"status": {
				"dockerImageRepository": ""
			}
		},
		{
			"apiVersion": "v1",
			"kind": "BuildConfig",
			"metadata": {
				"annotations": {
					"openshift.io/generated-by": "OpenShiftNewApp"
				},
				"labels": {
					"app": "${APP_NAME}"
				},
				"name": "${APP_NAME}"
			},
			"spec": {
				"output": {
					"to": {
						"kind": "ImageStreamTag",
						"name": "${APP_NAME}:latest"
					}
				},
				"resources": {},
				"source": {
					"git": {
						"uri": "${GIT_URI}",
						"ref": "${GIT_REF}"
					},
					"type": "Git",
					"sourceSecret": {
						"name": "repo-at-github"
					}
				},
				"strategy": {
					"sourceStrategy": {
						"from": {
							"kind": "ImageStreamTag",
							"name": "springboot-java:latest",
							"namespace": "openshift"
						},
						"env": [{
								"name": "BUILD_TYPE",
								"value": "Maven"
							},
							{
								"name": "MAVEN_ARGS_APPEND",
								"value": "-P${BUILD_PROFILE}"
							}
						]
					},
					"type": "Source"
				},
				"triggers": [{
						"github": {
							"secret": "secret"
						},
						"type": "GitHub"
					},
					{
						"generic": {
							"secret": "secret"
						},
						"type": "Generic"
					},
					{
						"type": "ConfigChange"
					},
					{
						"imageChange": {},
						"type": "ImageChange"
					}
				]
			},
			"status": {
				"lastVersion": 0
			}
		},
		{
			"apiVersion": "v1",
			"kind": "DeploymentConfig",
			"metadata": {
				"annotations": {
					"openshift.io/generated-by": "OpenShiftNewApp"
				},
				"labels": {
					"app": "${APP_NAME}"
				},
				"name": "${APP_NAME}"
			},
			"spec": {
				"replicas": 1,
				"selector": {
					"app": "${APP_NAME}",
					"deploymentconfig": "${APP_NAME}"
				},
				"strategy": {
					"resources": {},
					"rollingParams": {
						"intervalSeconds": 1,
						"maxSurge": "25%",
						"maxUnavailable": "25%",
						"timeoutSeconds": 600,
						"updatePeriodSeconds": 1
					},
					"type": "Rolling"
				},
				"template": {
					"metadata": {
						"annotations": {
							"openshift.io/generated-by": "OpenShiftNewApp"
						},
						"labels": {
							"app": "${APP_NAME}",
							"deploymentconfig": "${APP_NAME}"
						}
					},
					"spec": {
						"containers": [{
							"image": "${APP_NAME}",
							"imagePullPolicy": "Always",
							"name": "${APP_NAME}",
							"env": [{
									"name": "KEYCLOAK_SERVER_URL",
									"value": "${KEYCLOAK_SERVER_URL}"
								},
								{
									"name": "KEYCLOAK_REALM_ID",
									"value": "${KEYCLOAK_REALM_ID}"
								},
								{
									"name": "SPL_BASEURL",
									"value": "${SPL_BASEURL}"
								},
								{
									"name": "SPL_USER",
									"value": "${SPL_USER}"
								},
								{
									"name": "SPL_PASSWORD",
									"value": "${SPL_PASSWORD}"
								},
								{
									"name": "SPRING_CLOUD_CONSUL_HOST",
									"valueFrom": {
										"fieldRef": {
											"fieldPath": "status.hostIP"
										}
									}
								},
								{
									"name": "REDIS_PASSWORD",
									"valueFrom": {
										"secretKeyRef": {
											"name": "redis-apigw",
											"key": "database-password"
										}
									}
								},
								{
									"name": "SPRING_CLOUD_CONSUL_CONFIG_ACL_TOKEN",
									"value": "${SPRING_CLOUD_CONSUL_CONFIG_ACL_TOKEN}"
								},
								{
									"name": "APP_OPTIONS",
									"value": "-P${BUILD_PROFILE}"
								}
							],
							"ports": [{
								"containerPort": 8080,
								"protocol": "TCP"
							}],
							"resources": {},
							"terminationMessagePath": "/dev/termination-log"
						}],
						"dnsPolicy": "ClusterFirst",
						"restartPolicy": "Always",
						"securityContext": {},
						"terminationGracePeriodSeconds": 30
					}
				},
				"test": false,
				"triggers": [{
						"type": "ConfigChange"
					},
					{
						"imageChangeParams": {
							"automatic": true,
							"containerNames": [
								"${APP_NAME}"
							],
							"from": {
								"kind": "ImageStreamTag",
								"name": "${APP_NAME}:latest"
							}
						},
						"type": "ImageChange"
					}
				]
			},
			"status": {}
		},
		{
			"apiVersion": "v1",
			"kind": "Service",
			"metadata": {
				"annotations": {
					"openshift.io/generated-by": "OpenShiftNewApp"
				},
				"creationTimestamp": null,
				"labels": {
					"app": "${APP_NAME}"
				},
				"name": "${APP_NAME}"
			},
			"spec": {
				"ports": [{
					"name": "8080-tcp",
					"port": 8080,
					"protocol": "TCP",
					"targetPort": 8080
				}],
				"selector": {
					"app": "${APP_NAME}",
					"deploymentconfig": "${APP_NAME}"
				},
				"sessionAffinity": "None",
				"type": "ClusterIP"
			},
			"status": {
				"loadBalancer": {}
			}
		}
	]
}